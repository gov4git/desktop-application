{
  "name": "gov4git-desktop-app",
  "private": true,
  "version": "0.18.0",
  "description": "Gov4Git Desktop Application",
  "type": "commonjs",
  "main": "./build/electron/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "clean": "shx rm -rf ./build",
    "db:generate-migration": "dotenv -e .env -- drizzle-kit generate:sqlite",
    "db:print-schema": "dotenv -e .env -- drizzle-kit introspect:sqlite",
    "format:check": "prettier --check \"./src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint:check": "eslint \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx}\"",
    "test": "jest testRunner.test.ts --testTimeout=30000 --silent=true --verbose=true",
    "build:webapp": "vite build --config ./vite.webapp.config.mts",
    "build:electron": "tsup --dts",
    "build": "conc npm:build:webapp npm:build:electron",
    "dev:electron": "dotenv -e .env -- nodemon --watch ./build/electron -e js --exec \"electron . --trace-warnings\"",
    "dev:webapp": "dotenv -e .env -- vite dev --config ./vite.webapp.config.mts --port 6553",
    "dev": "conc \"npm:dev:webapp\" \"npm:build:electron -- --watch --env.PORT 6553\" npm:dev:electron",
    "preview": "electron .",
    "ci:check": "run-s clean build format:check lint:check",
    "electron:rebuild": "electron-builder install-app-deps",
    "electron:build": "electron-builder --config --publish never --dir",
    "electron:package": "electron-builder --config --publish never --pd",
    "electron:buildPackage": "electron-builder --config --publish never",
    "electron:hash": "tsx ./scripts/hashBin.ts",
    "electron:publish": "tsx ./scripts/release.ts",
    "release:changeset": "changeset",
    "release:version": "changeset version",
    "postrelease:version": "npm install",
    "release:tag": "changeset publish"
  },
  "keywords": [
    "Gov4Git",
    "Desktop",
    "App"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.0",
    "@changesets/cli": "^2.27.1",
    "@d-dev/eslint-plugin": "^1.2.0",
    "@electron/notarize": "^2.2.0",
    "@jest/globals": "^29.7.0",
    "@kayahr/jest-electron-runner": "^29.10.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/fast-redact": "^3.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/object-path": "^0.11.4",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.20.6",
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.1",
    "npm": "^10.2.4",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.1.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.3",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.41.0",
    "@fluentui/react-icons": "^2.0.223",
    "@fluentui/react-search-preview": "^0.1.33",
    "@gov4git/js-client": "2.2.6",
    "@octokit/auth-oauth-device": "^6.0.1",
    "@octokit/request": "^8.1.6",
    "@vscode/codicons": "^0.0.35",
    "better-sqlite3": "^9.1.1",
    "drizzle-orm": "^0.29.0",
    "fast-redact": "^3.3.0",
    "immer": "^10.0.3",
    "jotai": "^2.6.0",
    "marked": "^10.0.0",
    "object-path": "^0.11.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "undici": "^5.28.1",
    "validator": "^13.11.0",
    "zustand": "^4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gov4git/desktop-application.git"
  }
}
