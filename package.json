{
  "name": "gov4git-desktop-app",
  "private": true,
  "version": "0.5.0",
  "description": "Gov4Git Desktop Application",
  "type": "commonjs",
  "main": "./build/electron/main.js",
  "scripts": {
    "clean": "shx rm -rf ./build",
    "db:generate-migration": "drizzle-kit generate:sqlite",
    "db:print-schema": "drizzle-kit introspect:sqlite",
    "db:studio": "drizzle-kit studio --port 3000 --verbose",
    "format:check": "prettier --check \"./src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint:check": "eslint \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx}\"",
    "test": "jest",
    "build:webapp": "vite build --config ./vite.webapp.config.ts",
    "build:electron": "tsup --dts",
    "build": "conc npm:build:webapp npm:build:electron",
    "dev:electron": "nodemon --watch ./build/electron -e js --exec \"electron .\"",
    "dev:webapp": "vite dev --config ./vite.webapp.config.ts --port 6553",
    "dev": "conc \"npm:dev:webapp\" \"npm:build:electron -- --watch --env.PORT 6553\" npm:dev:electron",
    "preview": "electron .",
    "git:clean": "git-is-clean",
    "ci:check": "run-s clean build format:check lint:check git:clean",
    "electron:rebuild": "electron-rebuild",
    "electron:build": "electron-builder --config --publish never --dir",
    "electron:package": "electron-builder --config --publish never --pd",
    "electron:buildPackage": "electron-builder --config --publish never",
    "electron:hash": "tsx ./scripts/hashBin.ts",
    "electron:publish": "tsx ./scripts/release.ts",
    "release:changeset": "changeset",
    "release:version": "changeset version",
    "postrelease:version": "npm install",
    "release:tag": "changeset publish"
  },
  "keywords": [
    "Gov4Git",
    "Desktop",
    "App"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-git": "^0.1.14",
    "@changesets/cli": "^2.26.2",
    "@d-dev/eslint-plugin": "^1.1.1",
    "@electron/notarize": "^2.1.0",
    "@jest/globals": "^29.7.0",
    "@kayahr/jest-electron-runner": "^29.10.0",
    "@types/better-sqlite3": "^7.6.6",
    "@types/fast-redact": "^3.0.3",
    "@types/js-yaml": "^4.0.6",
    "@types/node": "^18.16.18",
    "@types/object-path": "^0.11.1",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "@types/validator": "^13.11.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vitejs/plugin-react": "^4.0.1",
    "add": "^2.0.6",
    "c8": "^8.0.1",
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.19.13",
    "electron": "^25.1.1",
    "electron-builder": "^24.4.0",
    "electron-updater": "^6.1.4",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "git-is-clean": "^3.0.1",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^2.0.22",
    "npm": "^9.7.1",
    "npm-run-all2": "^6.0.5",
    "prettier": "^2.8.8",
    "shx": "^0.3.4",
    "tap": "^18.5.0",
    "ts-jest": "^29.1.1",
    "tsup": "^7.0.0",
    "tsx": "^3.13.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.22.0",
    "@fluentui/react-icons": "^2.0.204",
    "@gov4git/js-client": "1.1.12",
    "@vscode/codicons": "^0.0.33",
    "better-sqlite3": "^9.0.0",
    "drizzle-orm": "^0.28.6",
    "fast-redact": "^3.3.0",
    "immer": "^10.0.2",
    "isomorphic-git": "^1.24.3",
    "jotai": "^2.3.1",
    "jotai-immer": "^0.2.0",
    "marked": "^6.0.0",
    "object-path": "^0.11.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.10",
    "react-router-dom": "^6.13.0",
    "undici": "^5.26.3",
    "validator": "^13.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gov4git/desktop-application.git"
  }
}
